  public static void discount() {
    // claim coupon discount
    System.out.print("Enter Y to claim your voucher here: ");
    GetVoucher = input.next().charAt(0);

    switch (GetVoucher) {

    case 'Y':

      System.out.println("Send your spoiled fruits to our marchandise and get up to 5 percent off from SDN for every purchase you made with us.");

      System.out.print("Please enter the total weight of your spoiled fruit(gram): ");
      gram = input.nextInt();
      System.out.println("");

      if (gram <= 499) {
        System.out.println("\n\n\nYou are not valid to claim voucher yet");
        gramneeded = 500 - gram;
        System.out.println("You need another " + gramneeded + "gram");
      } else if (gram >= 500 && gram <= 999) {
        System.out.println("You just got a 5% voucher code");
        System.out.println("Use the code below for your next purchase with us");
        System.out.println("1111");
      } else {
        System.out.println("You just got a 8% voucher code");
        System.out.println("Use the code below for your next purchase with us");
        System.out.println("1101");

      }

      System.out.println("\n\n\nThank you for your contribution");
      break;

    default :
      System.out.println("\n\n\nThank You for using our service");

    }
    // Stop claim coupon discount


System.out.println("Have a nice day");
    //input.close();
  }
  
  public static int getTypeForProductInfo() {
    // This method will return the type to main() whether e.g. 1-Tart,2-Pie or 3-Pudding
    //declare and assign array donate
       Scanner sc = new Scanner (System.in);
      int num2;
      
      System.out.println("---------------Welcome to Product Information---------------- ");
        System.out.println("List of products: ");
        System.out.println("1-Grape ");
        System.out.println("2-Apple");
        // input 1 or 2 to view the information
        System.out.println("\nChoose 1 or 2 to view the information of Grape or Apple respectively.");
        num2=sc.nextInt();
        
        return num2;
   }
  
  public static String[] getInfoForProduct() {
     //This method will return the info from the array based on the type specified to main ()
    //Declare and assign array product
     String[] product = {"A grape is a fruit, botanically a berry, of the deciduous woody vines of the flowering plant genus Vitis."
               + " \nGrapes can be eaten fresh as table grapes, used for making wine, jam, grape juice, jelly, grape seed extract,"
               + ""
               + "n vinegar, and grape seed oil, or dried as raisins, currants and sultanas",
               "An apple is an edible fruit produced by an apple tree. Apple trees are cultivated worldwide and are the most widely grown species in the genus Malus."
               + " \nThe tree originated in Central Asia, where its wild ancestor, Malus sieversii, is still found today."};
     return product;
  }
  
  public static void GenerateRandom() {
	    
      int min = 1;
      int max = 3;
        
      //Generate random int value from 50 to 100 
      System.out.println("You've got 1 chances to get random fruits! Good luck");
      System.out.println("Random value :");
      int random_int = (int)Math.floor(Math.random()*(max-min+1)+min);
      System.out.println(random_int);
    
      Gatcha();
}

public static void Gatcha() {
	System.out.print("Enter random value you got ");
	int random = input.nextInt();
	
	switch (random) {
	case 1 :
		System.out.println("YEAY ! Get 50g apple");
		break;
	case 2 :
		System.out.println("YEAY ! Get 50g Anggur");
		break;
	case 3 :
	default :
		System.out.println("Better luck next time");
		
	}
}

