	public static String tarikh() {
		System.out.println("\nPlease enter the date of month below");
		System.out.print("Date\t: ");
		tanggal = input.nextInt();
		System.out.print("Month\t: ");
		bulan = input.nextInt();
		System.out.print("Year\t: ");
		tahun = input.nextInt();

		// tarikh2= tanggal1+bulan1+tahun1;
		String tarikh2 = new String(), tanggal1 = Integer.toString(tanggal), bulan1 = Integer.toString(bulan),
				tahun1 = String.valueOf(tahun);

		tarikh2 = tanggal1 + "/" + bulan1 + "/" + tahun1;

		return tarikh2;
	}

