	public static void listbuah() {

		System.out.println("");

		System.out.println("\t\t" + satu + "Fruits available now" + satu);
		String[] barang = { "AppleðŸŽ", "GrapeðŸ‡", "Lain\"" };

		for (order = 0; order < barang.length; order++)
			System.out.println(l++ + ". " + barang[order] + "\t");

	}

	public static void checkharga() {
		System.out.println("");
		System.out.println("ðŸ¤‘This system will check the price of fruit by entering the name of the fruitðŸ’°\n");

		System.out.print("Enter N to stop checking fruit details\t: ");
		choice = input.next().charAt(0);
		System.out.println("");

		while (choice != 'N') {

			System.out.printf("Please enter the fruit name\t: ");
			buah = input.next();

			if (buah.equals("Grape")) {
				fruitprice = 8;
				System.out.printf("Fruit price per kilogram\t: " + "RM" + fruitprice + "\n");
				System.out.print("Fruit code is\t\t\t: 111111\n");

			} else if (buah.equals("Apple")) {
				fruitprice = 10;
				System.out.printf("Fruit price per kilogram\t: " + "RM" + fruitprice + "\n");
				System.out.print("Fruit code is\t\t\t: 000000\n");

			} else {
				fruitprice = 15;
				System.out.printf("Fruit price per kilogram\t: " + "RM" + fruitprice + "\n");
				System.out.print("Fruit code is\t\t\t: xxxxxx\n");
				System.out.println("This item is preorder");

			}
			System.out.print("\nEnter N to stop checking the price of fruit\t: ");
			choice = input.next().charAt(0);

			System.out.println("");
		} // looping

		System.out.println("\t\t" + satu + "Ready to take order" + satu);
	}

	public static void order(String cus_name,String tarikh,String orderTime) {
		// user proceed order
		
		System.out.print("\nProceed if you want to order(Y/N)\t: ");
		Y = input.next().charAt(0);
		System.out.println();
		String date_of_delivery = null;
		String deliverTime = null;
		// OTW Order
		switch (Y) {

		case 'Y':

			// system taking order
			System.out.print("Enter the number of item(s) to purchase (Only below 3): ");
			item = input.nextInt();

			fruitprice = 0;
			// double totalorder1 ;

			switch (item) {
			case 1:

				System.out.print("What do you want to order\t\t: ");
				orderbuah = input.next();

				if (orderbuah.equals("Grape")) {
					fruitprice = 8;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else if (orderbuah.equals("Apple")) {
					fruitprice = 10;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else {
					fruitprice = 15;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					System.out.println("preorder");
					// System.out.print("\n");
				}

				System.out.print("Total Kilogram you need (KG)\t\t: ");
				kilogram1 = input.nextInt();

				// Detect the price and kilogram
				totalorder = (fruitprice * kilogram1);
				System.out.printf("\nTotal fruit price : " + "RM%.2f" , totalorder);
				break;

			case 2:

				System.out.print("What is your first order\t\t: ");
				orderbuah = input.next();

				if (orderbuah.equals("Grape")) {
					fruitprice = 8;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else if (orderbuah.equals("Apple")) {
					fruitprice = 10;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else {
					fruitprice = 15;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					System.out.println("preorder");
					// System.out.print("\n");
				}

				System.out.print("Total Kilogram for your first item (KG)\t: ");
				kilogram1 = input.nextInt();
				System.out.print("\n");

				totalorder = fruitprice * kilogram1;

				System.out.print("What is your second order\t\t: ");
				orderbuah = input.next();

				if (orderbuah.equals("Grape")) {
					fruitprice = 8;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else if (orderbuah.equals("Apple")) {
					fruitprice = 10;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else {
					fruitprice = 15;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					System.out.println("preorder");
					// System.out.print("\n");
				}

				System.out.print("Total Kilogram for your second item (KG): ");
				kilogram2 = input.nextInt();

				// Detect the price and kilogram
				totalorder = (totalorder + (fruitprice * kilogram2));
				System.out.printf("\nTotal fruit price : " + "RM%.2f" , totalorder);
				break;

			case 3:

				System.out.print("What is your first order\t\t: ");
				orderbuah = input.next();

				if (orderbuah.equals("Grape")) {
					fruitprice = 8;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else if (orderbuah.equals("Apple")) {
					fruitprice = 10;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else {
					fruitprice = 15;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					System.out.println("preorder");
					// System.out.print("\n");
				}

				System.out.print("Total Kilogram for your first item (KG): ");
				kilogram1 = input.nextInt();
				System.out.print("\n");
				totalorder = fruitprice * kilogram1;

				System.out.print("What is your second order\t\t: ");
				orderbuah = input.next();

				if (orderbuah.equals("Grape")) {
					fruitprice = 8;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else if (orderbuah.equals("Apple")) {
					fruitprice = 10;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else {
					fruitprice = 15;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					System.out.println("preorder");
					// System.out.print("\n");
				}

				System.out.print("Total Kilogram for your second item (KG): ");
				kilogram2 = input.nextInt();
				System.out.print("\n");

				totalorder = (totalorder + (fruitprice * kilogram2));

				System.out.print("What is your third order\t\t: ");
				orderbuah = input.next();

				if (orderbuah.equals("Grape")) {
					fruitprice = 8;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else if (orderbuah.equals("Apple")) {
					fruitprice = 10;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					// System.out.print("\n");

				} else {
					fruitprice = 15;
					System.out.printf("Fruit price per kilogram\t\t: " + "RM" + fruitprice + "\n");
					System.out.println("preorder");
					// System.out.print("\n");
				}

				System.out.print("Total Kilogram for your third item (KG)\t: ");
				kilogram3 = input.nextInt();

				// Detect the price and kilogram
				totalorder = (totalorder + (fruitprice * kilogram3));
				System.out.printf("\nTotal fruit price : " + "RM%.2f" , totalorder);
				break;

			default: 
				System.out.println("Your order is not valid");
			}

			// Stop system taking order

			// discount from the spoiled fruit voucher

			peratusdiskaun1 = 0;

			System.out.print("\nDo you want to claim your voucher(Y/N): ");
			claimVoucher = input.next().charAt(0);

			switch (claimVoucher) {

			case 'Y':

				System.out.print("\nEnter your voucher code here: ");
				peratusdiskaun1 = input.nextInt();

				if (peratusdiskaun1 == 1111) {
					System.out.println("You've claimed your 5 percent voucher");

					percentage = 0.95; // detect dri kod diskaun
					totalorder1 = (percentage * totalorder);
					System.out.printf("Your Total fruit price is: RM%.2f", totalorder1);
					System.out.println("");
				} else if (peratusdiskaun1 == 1101) {
					System.out.println("You've claimed your 8 percent voucher");

					percentage = 0.92; // detect dri kod diskaun
					totalorder1 = (percentage * totalorder);
					System.out.printf("Your Total fruit price is: RM%.2f", totalorder1);
					System.out.println("");
				} else
					System.out.println("Discount voucher not valid");

				break;
			}
			// Stop discount from the spoiled fruit voucher

			// Proceed Delivery
			System.out.println("\nWe only deliver to Kg Bubul and Sepagaya ");
			System.out.print("\nPlease enter Y to proceed with the delivery: ");
			deliveryProceed = input.next().charAt(0);

			switch (deliveryProceed) {
			case 'Y':

				System.out.print("Enter the delivery location\t: ");
				
				location = input.nextLine();
				location = input.nextLine();
				// Jarak perjalanan dan delivery fee

				// Proceed location
				if (location.equals("Kg Bubul")) {
					jaraklokasi = 8;
					cajpenghantaran = 8;
					System.out.print("Enter date of delivery (e.g., 12/2/22): ");
					date_of_delivery = input.next();
					System.out.println("Enter time of delivery (e.g.,12.30 P.M): ");
					deliverTime=input.next();
					System.out.println("We will deliver customer's order 15 minutes early.");
					System.out.println("Location distance\t\t: " + jaraklokasi + "KM");
					System.out.println("Delivery fee to " + location + "\t: RM" + cajpenghantaran);
					
					total = totalorder + cajpenghantaran;
					

				} else if (location.equals("Sepagaya")) {
					jaraklokasi = 5;
					cajpenghantaran = 5;
					System.out.print("Enter date of delivery (e.g., 12/2/22): ");
					date_of_delivery = input.next();
					System.out.println("Enter time of delivery (e.g.,12.30 P.M): ");
					deliverTime=input.next();
					System.out.println("We will deliver customer's order 15 minutes early.");
					System.out.println("Location distance\t\t: " + jaraklokasi + "KM");
					System.out.println("Delivery fee to " + location + "\t: RM" + cajpenghantaran);

					total = totalorder + cajpenghantaran;

				} else {

					System.out.println("Sorry your address is not in our delivery range");

					total = totalorder + cajpenghantaran;
				}
				// Stop proceed location
				break;
				
				

			}
			// Stop proceed Delivery
			//create 6-digit random number for ORDER ID 
			String orderId=Dessert.getRandomNumberString();
			// system check the total cost
			System.out.println("\n\t###########################################");
			System.out.println("\t\tCUSTOMER'S RECEIPT");
			System.out.println("\t\tORDER ID        : " +orderId);
			System.out.println("\t\tCUSTOMER NAME   : " +cus_name);
			System.out.println("\t\tDATE OF ORDER   : "+ tarikh );
			System.out.println("\t\tTIME OF ORDER   : "+ orderTime);
			System.out.println("\t\tDATE TO DELIVER : "+ date_of_delivery);
			System.out.println("\t\tTIME TO DELIVER : "+ deliverTime);
			System.out.println("\n\t\tDETAILS");			
			System.out.printf("\t\tTOTAL PAYMENT   : RM%.2f", total);
			
			System.out.println("\n\t###########################################");
		
			System.out.println("\n\t\tThank you for purchasing with us.\n");

			break;
		// Stop OTW Order

		case 'N':
			System.out.println("\n\t\tWe're sorry to see you go. Thank You\n");
		}// to not proceed order

		// Stop user proceed order

	}

	public static void resistancecondition() {
