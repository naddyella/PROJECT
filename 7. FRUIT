public static String tarikh() {
    System.out.println("\nPlease enter the date of month below");
    System.out.print("Date\t: ");
    tanggal = input.nextInt();
    System.out.print("Month\t: ");
    bulan = input.nextInt();
    System.out.print("Year\t: ");
    tahun = input.nextInt();

    // tarikh2= tanggal1+bulan1+tahun1;
    String tarikh2 = new String(), tanggal1 = Integer.toString(tanggal), bulan1 = Integer.toString(bulan),
        tahun1 = String.valueOf(tahun);

    tarikh2 = tanggal1 + "/" + bulan1 + "/" + tahun1;

    return tarikh2;
  }

  // array
  public static void listbuah() {

    System.out.println("");

    System.out.println("\t\t" + satu + "Fruits available now" + satu);
    String[] barang = { "Apple🍎", "Grape🍇", "Lain\"" };

    for (order = 0; order < barang.length; order++)
      System.out.println(l++ + ". " + barang[order] + "\t");

  }

  public static void checkharga() {
    System.out.println("");
    System.out.println("🤑This system will check the price of fruit by entering the name of the fruit💰\n");

    System.out.print("Enter N to stop checking fruit details\t: ");
    choice = input.next().charAt(0);
    System.out.println("");

    while (choice != 'N') {

      System.out.printf("Please enter the fruit name\t: ");
      buah = input.next();

      if (buah.equals("Grape")) {
        fruitprice = 8;
        System.out.printf("Fruit price per kilogram\t: " + "RM" + fruitprice + "\n");
        System.out.print("Fruit code is\t\t\t: 111111\n");

      } else if (buah.equals("Apple")) {
        fruitprice = 10;
        System.out.printf("Fruit price per kilogram\t: " + "RM" + fruitprice + "\n");
        System.out.print("Fruit code is\t\t\t: 000000\n");

      } else {
        fruitprice = 15;
        System.out.printf("Fruit price per kilogram\t: " + "RM" + fruitprice + "\n");
        System.out.print("Fruit code is\t\t\t: xxxxxx\n");
        System.out.println("This item is preorder");

      }
      System.out.print("\nEnter N to stop checking the price of fruit\t: ");
      choice = input.next().charAt(0);

      System.out.println("");
    } // looping

    System.out.println("\t\t" + satu + "Ready to take order" + satu);
  }

  public static void order(String cus_name,String tarikh,String orderTime) {
    // user proceed order
    
    System.out.print("\nProceed if you want to order(Y/N)\t: ");
    Y = input.next().charAt(0);
    System.out.println();
    
    
    test(cus_name, tarikh, orderTime);
  }
    public static void test(String cus_name,String tarikh,String orderTime) {
      String date_of_delivery = null;
      String deliverTime = null;
    // OTW Order
    switch (Y) {

    case 'Y':

      // system taking order
      System.out.print("Enter the number of item(s) to purchase (Only below 3): ");
